<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise.Exercise2">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Fill">
            <Image Source="http://lorempixel.com/1920/1080/nature/3/"></Image>
            <StackLayout Orientation="Horizontal" Padding="20,0" >
                <Button Text="Like" BackgroundColor="Transparent" VerticalOptions="Start" HorizontalOptions="Start"  BorderColor="Transparent" TextColor="Blue"></Button>
                <Button Text="Comment" BackgroundColor="Transparent"  VerticalOptions="Start" HorizontalOptions="Start" BorderColor="Transparent" TextColor="Blue" ></Button>
                <Button Text="Share" BackgroundColor="Transparent" VerticalOptions="Start" HorizontalOptions="Start"  BorderColor="Transparent" TextColor="Blue" ></Button>
            </StackLayout>
            <BoxView Color="#f0f0f0" HeightRequest="1"></BoxView>
            <Label FontSize="Large" FontAttributes="Bold" >Hello world</Label>
            <Label FontSize="Medium" >This is a shot yesterday in Skanor, Sweden, when drving home, from a couple of days of work in Denmark</Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>