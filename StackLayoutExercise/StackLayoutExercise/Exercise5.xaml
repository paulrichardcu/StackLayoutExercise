<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise.Exercise5">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView AbsoluteLayout.LayoutBounds="0,0,1,0.3" BackgroundColor="#f7f7f7"></BoxView>
            <StackLayout BackgroundColor="#f7f7f7" AbsoluteLayout.LayoutBounds="0,0,1,0.3" AbsoluteLayout.LayoutFlags="All" VerticalOptions="Center">
                <Label Text="$11.95" HorizontalTextAlignment="Center" TextColor="#33353a" FontSize="60" FontAttributes="Bold"></Label>
                <Button BackgroundColor="#1695A3" BorderRadius="15" HeightRequest="40" FontSize="15" FontAttributes="Bold"></Button>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0,0.5,1,0.5" AbsoluteLayout.LayoutFlags="All">
                <Label FontSize="15" FontAttributes="Bold" Text="Why pay for credit?" HorizontalTextAlignment="Center"></Label>
                <Label FontSize="13" HorizontalTextAlignment="Center"> Because you can reach peaople who arent on Skyapp by calling mobile aned landline numbers, or spending SMS, at low rates</Label>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>